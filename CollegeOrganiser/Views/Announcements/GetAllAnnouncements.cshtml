@using Microsoft.AspNetCore.Identity
@model IEnumerable<CollegeOrganiser.Models.AnuntModel>
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "GetAllAnnouncements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="TitluAnunt pb-5">Anunturi</h1>
<div class="pb-5"></div>
<div class="row">
    <div class="row  col-9  ">
        @foreach (var item in Model)
        {

            <div class="col-8 bg-warning mb-3 ">
                <div class="container-fluid  mb-3  d-inline-block">
                    <div class="card-header titluAnunturi">
                        <h2>
                            @Html.DisplayFor(modelItem => item.Title)
                        </h2>

                    </div>
                    <div class="card-body bodyAnunt container-fluid ">
                        <blockquote class=" blockquote mb-0  ">
                            <p> @Html.DisplayFor(modelItem => item.Description)</p>
                           @if(UserManager.GetUserAsync(User).Result.NumeUtilizator==item.Author )
                          {
                            <a asp-action="DeleteAnnouncement" asp-route-id="@item.Id">Delete</a>
                           }

                            <footer class="blockquote-footer ">@Html.DisplayFor(modelItem => item.CreatedOn.DateTime) <cite title="Source Title" style="font-weight:bold;">@Html.DisplayFor(modelItem => item.Author) </cite></footer>
                        </blockquote>
                    </div>
                </div>
            </div>



        }
    </div>
    <div class="container col-1">

    </div>

    <div class="container col-2  ">
        <h4>Cauta un anunt</h4>

        <form asp-action="SearchAnnouncements" method="get">

            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>

    </div>




</div>
