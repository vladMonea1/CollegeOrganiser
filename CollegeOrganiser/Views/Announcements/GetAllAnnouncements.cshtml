@model IEnumerable<CollegeOrganiser.Models.AnuntModel>

@{
    ViewData["Title"] = "GetAllAnnouncements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="TitluAnunt pb-5">Anunturi</h1>

<table class="table">
    <thead>
        <tr>
            <th>

                Creat la data:
            </th>
            <th>

                Titlul anuntului:
            </th>
            <th>

                Anuntul:
            </th>
            <th>

                Autor:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>

                @if (User.IsInRole("Profesor"))
                {
                    <td>
                        <a asp-action="DeleteAnnouncement" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>

        }
    </tbody>
</table>

<h4>Search for a Joke</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchAnnouncements" method="get">

            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>