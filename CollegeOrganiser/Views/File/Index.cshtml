@model List<FileModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/style.css" rel="stylesheet" />
<h4>LISTEAZA TEME</h4>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible" style="margin-top:20px">
        @ViewBag.Message
    </div>
}
@if (User.IsInRole("Profesor"))
{
<form method="post" enctype="multipart/form-data">



    <label for="file-upload" class="custom-file-upload">
        ALEGE FISIER
    </label>
    <input id="file-upload" type="file" name="files" multiple required />
    

    <input type="text" autocomplete="off" placeholder="Detalii tema" name="description" required />
    <button class="btn btn-success" type="submit" asp-controller="File" asp-action="UploadToDatabase">UPLOAD</button>
</form>
}

@if (Model.Count == 0)
{
    <caption>Nicio tema adaugata recent</caption>
}
else
{

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Tema nr:</th>
                <th>Autor</th>
                <th>Titlul Temei:</th>
                <th>Detalii Tema:</th>
                <th>Asignat la data:</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
            <tr>

                <th>@file.Id</th>
                <th>@file.UploadedBy</th>
                <td>@file.Name</td>
                <td>@file.Description</td>
                <td>@file.CreatedOn</td>
                <td>
                    <a type="button" class="btn btn-primary" asp-controller="File" asp-action="DownloadFileFromDatabase" asp-route-id="@file.Id">DOWNLOAD</a>
                    @if (User.IsInRole("Profesor"))
                    {
                        <a type="button" class="btn btn-danger" asp-controller="File" asp-action="DeleteFileFromDatabase" asp-route-id="@file.Id">DELETE</a>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
}