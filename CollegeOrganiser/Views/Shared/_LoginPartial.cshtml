@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link h-auto" id="navBarItems" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> HELLO, <label style="font-style:italic" >@UserManager.GetUserAsync(User).Result.NumeUtilizator! </label> </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link " id="logOutBtn">LOG OUT</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link  " id="navBarItems" asp-area="Identity" asp-page="/Account/Register">REGISTER</a>
    </li>
    <li class="nav-item">
        <a class="nav-link  "  id="navBarItems" asp-area="Identity" asp-page="/Account/Login">LOG-IN</a>
    </li>
}
</ul>
