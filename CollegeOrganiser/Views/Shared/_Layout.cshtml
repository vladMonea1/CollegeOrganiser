<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollegeOrganiser</title>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://kit.fontawesome.com/c168f04abe.js" crossorigin="anonymous"></script>
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>*@
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body id="bodyStyle">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" id="navBarModded" >
            <div class="container-fluid" >
                <a class="navbar-brand" id="navBarItems" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link " id="navBarItems" asp-area="" asp-controller="Home" asp-action="GetUsers">ADMIN MANAGEMENT</a>
                            </li>
                        }
                        @if (User.IsInRole("Profesor") || User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link  " id="navBarItems" asp-area="" asp-controller="File" asp-action="DashBoardDocumente">DASHBOARD DOCUMENTE</a>
                            </li>

                        }
                        @if (User.IsInRole("Profesor") || User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link  " id="navBarItems" asp-area="" asp-controller="Announcements" asp-action="GetAllAnnouncements">ANUNTURI</a>
                            </li>
                        }



                        @if (User.IsInRole("Profesor"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navBarItems" href="#"  role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    TEACHER AREA
                                </a>
                                <div class="dropdown-menu dropDownProf" id="dropDownProf" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item container-fluid col-10" id="navBarItemsDropDown" asp-area="" asp-controller="Announcements" asp-action="AnnouncementCreation">ANUNT NOU</a>
                                    <a class="dropdown-item container-fluid col-10" id="navBarItemsDropDown" asp-area="" asp-controller="File" asp-action="Index">DOCUMENT NOU</a>
                                    <a class="dropdown-item container-fluid col-10" id="navBarItemsDropDown" asp-area="" asp-controller="Course" asp-action="CreateCourse">CURS NOU</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item container-fluid col-10" id="navBarItemsDropDown" asp-area="" asp-controller="Course" asp-action="Index">CURSURI</a>
                                </div>
                            </li>
                        }


                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navBarItems" href="#"  role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    STUDENT AREA
                                </a>
                                <div class="dropdown-menu dropDownProf" id="dropDownProf" aria-labelledby="navbarDropdown">

                                    <a class="dropdown-item container-fluid col-10" id="navBarItemsDropDown" asp-area="" asp-controller="Course" asp-action="MyCourses">CURSURILE MELE</a>
                                    <a class="dropdown-item container-fluid col-10" id="navBarItemsDropDown" asp-area="" asp-controller="Attendance" asp-action="Index">PREZENTELE MELE</a>
                                    <a class="dropdown-item container-fluid col-10" id="navBarItemsDropDown" asp-area="" asp-controller="Course" asp-action="Index">CURSURI</a>
                                    @*<div class="dropdown-divider"></div>
                                      <a class="dropdown-item" href="#"></a>*@
                                </div>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>                                            
    </div>
                            
    <footer class="  footer text-white footerModed ">
        <div class="container">
            &copy; 2021 - CollegeOrganiser - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @*<script src="../../Scripts/jquery-1.3.2.min.js" language="javascript" type="text/javascript" />
    <script src="../../Scripts/jquery-ui-1.7.1.custom.min.js" type="text/javascript" />*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
