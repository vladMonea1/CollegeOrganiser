@model List<Courses>
<h1 class="TitluAnunt">CURSURI</h1>
<div class="mb-5">

</div>

@*<div style="position:absolute; top:55px;  right:30px;">*@
@*<div class="position-relative">*@
<div class="row">
    <div class="col-2">

    </div>

    <div class="row container ">
        @foreach (var item in Model)
        {

            <div class="col-4">
                <div class="mb-4 card d-inline-block" style="width: 18rem;">
                    <img class="card-img-top" src="~/Images/1.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title" style="font-weight:bold; text-align:center">@item.CourseName</h5>
                        <hr style="border:1px solid" />
                        <p class="card-text">TITULAR CURS:</p>
                        <p>@item.CourseOwner</p>

                        <a class="float-right btn btn-info" asp-controller="Course" asp-action="JoinCourse" asp-route-id="@item.Id">Join</a>
                    </div>
                </div>

            </div>
        } 
    </div>

    <div class="container col-2">
        <form asp-action="SearchCourseResult" method="get">

            <div class="form-group">
                <label for="SearchPhrase" class="control-label"> </label>
                <input name="SearchPhrase" class="form-control" placeholder="Cauta un curs" />

            </div>
            <div class="form-group">

                <button class="custom-file-upload" type="submit"><i class="fas fa-search" aria-hidden="true"></i></button>
            </div>
        </form>
    </div>


</div>



