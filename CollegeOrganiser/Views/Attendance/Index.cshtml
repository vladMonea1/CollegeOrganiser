@model IEnumerable<CollegeOrganiser.Models.CourseAttendances>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attended)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Attended)
            </td>
            <td>
                @item.User.Email
            </td>
            <td>
                @item.CourseAttended.Course.CourseName
            </td>
            <td>
                @item.CourseAttended.DateHeld
            </td>
        </tr>
}
    </tbody>
</table>
